/* pages/paySuccess/paySuccess.wxss */
/* 支付成功上面的 */
page{
  background-color: #f5f5f5;
}
.paySuccessTop {
  width: 100%;
  height: 426rpx;
  overflow: hidden;
  background: linear-gradient(180deg, #1c6a4f, #134837);
}

