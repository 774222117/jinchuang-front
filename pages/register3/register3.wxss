/* pages/myIndex/myIndex.wxss */
page{
    height: 100%;
    background: #fff;
}
/* 头部 */
.register-header{
    width: 100%;
    min-height: 198rpx;
    /* background-color: #13513c;
    border-radius: 0 0 60rpx 60rpx; */
    position: relative;
    padding-top: 120rpx;
    display: flex;
    justify-content: center;
}
.register-bg{
    width: 100%;
    position: absolute;
    top: 0;
    z-index: -1;
    height: 380rpx;
}
.toolbar{
    /* width: 100%; */
    width:70rpx;
    height: 64rpx;
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    top: 40rpx;
    left: 0;
    /* padding: 0 25rpx; */
    z-index: 10;
}
.toolbar-back{
    width: 20rpx;
    height: 34rpx;
    /* margin-top: 15rpx; */
}
.title{
    height:64rpx;
    line-height: 64rpx;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    width:100rpx;
    position: absolute;
    /* left:calc(50% - 50rpx); */
    top:40rpx;
    display: flex;
	align-items: center;
	justify-content: center;
}
.step-item{
    position: absolute;
    top: 250rpx;
    left: 50rpx;
    width: 650rpx;
    height: 232rpx;
    background: #fff;
    border-radius: 20rpx;
    box-shadow: 0px 2px 7px 0px rgba(0,0,0,0.06);
    z-index: 9999;
}
.pic-guide{
    width: 100%;
    height: 116rpx;
    display: flex;
    justify-content: space-around;
    padding: 0 50rpx;
}
.pic-guide-img{
    width: 66rpx;
    height: 66rpx;
    margin-top: 50rpx;
}
.pic-guide-img-node{
    width: 48rpx;
    height: 30rpx;
    margin-top: 78rpx;
}
.text-guide{
    width: 100%;
    height: 116rpx;
    line-height: 100rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 50rpx;
}
.text-guide view{
    font-size: 28rpx;
    font-family: PingFang SC, PingFang SC-Bold;
    font-weight: 700;
    color: #323232;
}
.register-body{
    width: 750rpx;
    height: auto;
    margin-top: 282rpx;
    background: #fff;
}


.mask {
    position: fixed;
    top: 0;
    left: 0;
    min-height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 10;
}

.pwd-modal {
    /*position: fixed;*/
    /*top: 258rpx;*/
    /*left: 54rpx;*/
    /*right: 54rpx;*/
    /*height: 504rpx;*/
    padding-top: 50rpx;
    background: white;
    z-index: 99;
    border-radius: 8rpx;
    text-align: center;
}
.pwd-label{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 36rpx;
    color: #000;
    font-weight: 700;
}

ul {
    display: flex;
    margin: 0rpx 38rpx 104rpx;
}
.submit{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height:98rpx;
    background:rgba(253,49,49,1);
    box-shadow:0px -4px 6px 0px rgba(0,0,0,0.02);
    color: #FFFFFF;
    text-align: center;
    line-height: 98rpx;
    color: #FFFFFF;
    font-size: 34rpx;
}
ul li {
    width: 100%;
    height: 96rpx;
    line-height: 94rpx;
    border: 1rpx solid #ececeb;
    box-sizing: border-box;
    text-align: center;
    font-size: 0;
    background: #E5E5E5;
}

ul li:last-of-type {
    border-right: 1rpx solid #ececeb;
}

ul li .circle {
    display: inline-block;
    vertical-align: middle;
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    background: black;
}

input {
    text-indent: -9999rpx;
    margin-left: -9999rpx;
    opacity: 0;
}