/* pages/applyAfterType/applyAfterType.wxss */
.cardBox {
  width: 702rpx;
  background-color: #FFF;
  border-radius: 20rpx;
  margin: 24rpx auto 0;
  padding: 28rpx 28rpx 32rpx;
  display: flex;
  flex-direction: column;
}

.title {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #323232;
}

.goodsList {
  width: 100%;
  height: 176rpx;
  display: flex;
  margin-top: 28rpx;
}

.goodsList_img {
  width: 176rpx;
  height: 176rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.goodsList_main {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goodsList_title {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #323232;
  margin-bottom: 2rpx;
}

.goodsList_specs {
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: rgba(20, 20, 20, .53);
}

.goodsList_num {
  margin-top: 6rpx;
  height: 24rpx;
  line-height: 24rpx;
  font-size: 20rpx;
  font-family: DIN, DIN-Regular;
  font-weight: 400;
  color: rgba(20, 20, 20, .53);
}

.goodsList_priceBox {
  width: 100%;
  height: 52rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.goodsList_price {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 36rpx;
  font-family: DIN, DIN-Medium;
  font-weight: 500;
  color: #f35437;
}

.numBtn {
  width: 160rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #3d444d;
}

.numBtn image {
  width: 52rpx;
  height: 52rpx;
}

.typeList {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32px;
}

.typeList_left {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
}

.typeList_img {
  width: 60rpx;
  height: 60rpx;
  margin-right: 26rpx;
}

.typeList_title {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #323232;
  margin-bottom: 6rpx;
}

.typeList_tip {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #323232;
}

.typeList_icon {
  width: 52rpx;
  height: 39rpx;
}