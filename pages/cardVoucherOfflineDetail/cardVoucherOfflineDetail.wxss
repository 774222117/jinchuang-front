/* 弹框 */
.models{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 11;
  background-color: rgba(20,20,20,0.63);
}
.models .content{
  width: 100%;
  height: 676rpx;
  overflow: hidden;
  background: #ffffff;
  border-radius: 20px 20px 0px 0px;
  position: absolute;
  left: 0;
  right: 0;
