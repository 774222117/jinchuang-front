/* pages/seckill/seckill.wxss */
.topImg {
  width: 100%;
  height: 610rpx;
}

.listBox {
  width: 702rpx;
  position: relative;
  top: -80rpx;
  margin: 0 auto 24rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  /* opacity:  0.9; */
  background: rgba(255, 255, 255);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 14prx 0 rgba(0, 0, 0, 0.06);
}

.listItem {
  width: 100%;
  height: 256rpx;
  display: flex;
  justify-content: space-between;
  padding: 34rpx 4rpx 24rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgba(112, 112, 112, .1);
}

.listItem:last-child {
  border-bottom: none;
}

.listItem_img {
  width: 196rpx;
  height: 100%;
}

.listItem_main {
  width: 432rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.listItem_title {
  width: 100%;
  max-height: 74rpx;
  line-height: 34rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #323232;
  overflow: hidden;
  text-overflow: ellipsis;
}

.listItem_tag {
  height: 40rpx;
  display: flex;
  align-items: center;
  background: #e1ab5d;
  border-radius: 20rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #ffffff;
}

.listItem_tagIcon {
  width: 21rpx;
  height: 26rpx;
  margin-right: 4tpx;
}

.listItem_priceBox {
  width: 100%;
  height: 52rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.listItem_price {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 36rpx;
  font-family: DIN, DIN-Medium;
  font-weight: 500;
  color: #f35437;
}

.listItem_btnBox {
  width: 160rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #3d444d;
}

.listItem_btnBox image {
  width: 52rpx;
  height: 52rpx;
}

.holdThePlace {
  width: 100%;
  height: 44rpx;
  float: inline-end;
}