/* pages/cardVoucher/cardVoucher.wxss */
.top{
  width: 100%;
  height: 534rpx;
  background: linear-gradient(181deg,#1c6a4f 0%, #1c6a4f 1%, #1a6048 29%, #174735 100%, #131e17 100%, #131c16 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}
.top .titles{
  width: 100%;
  text-align: center;
  color: #ffffff;
  font-size: 36rpx;
  position: absolute;
  top: 0;
}
.top .imgs{
  width: 120rpx;
  height: 122rpx;
}
.top .texts{
  height: 122rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: center;
  margin-left: 20rpx;
}
.top .texts .text1{
  font-size: 36rpx;
  color: #ffffff;
}
.top .texts .text2{
  font-size: 36rpx;
  color: rgba(255,255,255,0.6);
}

/* 下面的盒子 */
.contents{
  width: 702rpx;
  height: 450rpx;
  margin: -110rpx auto 0;
  position: relative;
  z-index: 5;
}
.payInfo{
  width: 660rpx;
  height: 450rpx;
  background: #ffffff;
  box-shadow: 0px 6rpx 10rpx 0px rgba(0,0,0,0.03); 
  position: absolute;
  top: 9rpx;
  left: 0;
  right: 0;
  margin:  0 auto;
  z-index: 3;
}
.topLines{
  width: 660rpx;
  height: 26rpx;
  opacity: 0.2;
  background: linear-gradient(180deg,#1c6a4f, rgba(28,106,79,0.33) 57%, rgba(33,120,90,0.00));
}
.lines{
  width: 702rpx;
  height: 18rpx;
  background: #063b28;
  border-radius: 10rpx;
  position: absolute;
  left: -0;
  right: 0;
  top: 0;
  z-index: 1;
  margin:  0 auto;
}
.prices{
  width: 100%;
  height: 151rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 2rpx dashed rgba(112,112,112,0.3);
}

.priceText{
  font-weight: bold;
  color: rgba(243,84,55,1);
}
.priceText .text1{
  font-size: 64rpx;
}
.priceText .text2{
  font-size: 54rpx;
}
/* 订单信息 */
.orderInfo{
  width: calc(100% - 40rpx);
  height: 271rpx;
  padding-left: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
}





.imgsty{width: 100%;height: 100%;display: block;}
.footer{
  position: absolute;
  bottom: 78rpx;
  width: 100%;
}
.lookcard{
  width: 246rpx;
  height: 68rpx;
  opacity: 1;
  background: #1c6a4f;
  border-radius: 34rpx;
  margin: 0 auto;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  
}