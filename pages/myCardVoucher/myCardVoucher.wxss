/* pages/myCardVoucher/myCardVoucher.wxss */
.top{
  width: 100%;
  height: 80rpx;
  background: #ffffff;
  margin: 18rpx auto 26rpx;
  color: rgba(20,20,20,1);
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.headers.active{
  font-weight: bold;
  position: relative;
}
.headers.active::before{
  content: '';
  width: 24rpx;
  height: 16rpx;
  border-width: 4rpx;
  border-style: solid;
  border-color: #d6912d;
  border-radius: 50%;
  border-top-width: 0;
  border-right-width: 0;
  border-left-width: 0;
  border-bottom-width: 4rpx;
  position: absolute;
  bottom: -10rpx;
  left: 0;
  right: 0;
  margin: 0 auto;

}


/* 我的卡券 */
.myDiscountedCard {
  width: 100%;
  /* height: 542rpx; */
  background: #ffffff;
  overflow: hidden;
  padding-bottom: 24rpx;
}
/* 卡券 */
.cardItem {
  width: 654rpx;
  height: 132rpx;
  border-radius: 10rpx;
  margin: 18rpx auto 20rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.cardItem image {
  width: 100%;
  height: 100%;
  position: absolute;
}
/* 头像 */
.cardPic {
  width: 92rpx;
  height: 92rpx;
  opacity: 1;
  background: red;
  border-radius: 50%;
  margin-left: 18rpx;
}
/* 有效期 */
.cardTime {
  width: 214rpx;
  height: 74rpx;
  left: 131rpx;
  position: absolute;
}
.bookName {
  width: 250rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #ffffff;
}
.time {
  width: 214rpx;
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #ffffff;
}
/* 剩余价格 */
.cardMoney {
  width: 96rpx;
  height: 78rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #ffffff;
  right: 30rpx;
  position: absolute;
}
.cardMoneyText {
  width: 48rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #ffffff;
}
.price {
  width: 56rpx;
  height: 44rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #ffffff;
  display: flex;
}
.pricePoint {
  width: 40rpx;
  height: 44rpx;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #ffffff;
  line-height: 38rpx;
}
.morePic {
  width: 20rpx;
  height: 20rpx;
  margin-left: 7rpx;
  margin-bottom: 28rpx;
  cursor: pointer;
}
.morePic image {
  width: 100%;
  height: 100%;
}


/* 没有卡券 */
.noCardItem {
  width: 252rpx;
  height: 300rpx;
  margin: 34rpx 0 0 224rpx;
}
.noCardPic {
  width: 252rpx;
  height: 252rpx;
}
.noCardPic image {
  width: 100%;
  height: 100%;
}
.noCardText {
  width: 252rpx;
  height: 44rpx;
  opacity: 0.36;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #141414;
}

/* 卡片失效 */
.invalid{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background-color: rgba(255, 255, 255, 0.8);
}
.invalid .invalidImgs{
  width: 108rpx;
  height: 82rpx;
  position: absolute;
  right: 32rpx;
  top: 26rpx;
}

.imgsty{width: 100%;height: 100%;display: block;}