/* pages/afterOrderList/afterOrderList.wxss */
page {
  background: #f5f5f5;
}
/* 顶部控制栏 */
.tabControl {
  width: 750rpx;
  height: 86rpx;
  display: flex;
  line-height: 86rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  background: #ffffff;
}
.tabItem {
  flex: 1;
  text-align: center;
}
/* 被选中的颜色 */
.active {
  color: #d6912d;
}

/* 退款商品 */
.refundedGood {
  width: 702rpx;
  height: 304rpx;
  opacity: 1;
  background: #ffffff;
  border-radius: 20rpx;
  margin: 24rpx 0 0 24rpx;
  overflow: hidden;
}
/* 退款状态 */
.refundedState {
  width: 646rpx;
  height: 44rpx;
  margin: 24rpx 0 0 28rpx;
  display: flex;
  justify-content: space-between;
}
.refundedStateText {
  width: 128rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: center;
  color: #323232;
  line-height: 34rpx;
  line-height: 42rpx;
}
.refundedChange {
  /* width: 112rpx; */
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: right;
  color: #f35437;
  line-height: 34rpx;
  line-height: 40rpx;
}
/* 商品详情 */
.goodDetail {
  width: 647rpx;
  height: 176rpx;
  margin: 28rpx 0 0 28rpx;
  display: flex;
  justify-content: space-between;
}
/* 商品图片 */
.leftPic {
  width: 176rpx;
  height: 176rpx;
  background: red;
  border-radius: 8rpx;
}
/* 右边商品详情 */
.rightGoods {
  width: 451rpx;
  height: 176rpx;
}
.goodsNameNum {
  width: 451rpx;
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 商品名称 */
.goodsName {
  min-width: 292rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #323232;
  line-height: 34rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
/* 商品数量 */
.goodsNum {
  width: 40rpx;
  height: 34rpx;
  line-height: 30rpx;
  opacity: 0.53;
  font-size: 28rpx;
  font-family: DIN, DIN-Medium;
  font-weight: 500;
  color: #323232;
}
/* 重量 */
.goodsWeight {
  width: 100rpx;
  height: 44rpx;
  /* background: #f5f5f5; */
  border-radius: 8rpx;
  opacity: 0.53;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #141414;
  line-height: 44rpx;
  text-align: center;
  margin-top: 12rpx;
}
/* 价格和后续操作 */
.goodsPriceControl {
  width: 454rpx;
  height: 50rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}
.priceBox {
  width: 186rpx;
  height: 44rpx;
  display: flex;
}
/* 现价 */
.nowPrice {
  width: 96rpx;
  height: 44rpx;
  font-size: 36rpx;
  font-family: DIN, DIN-Medium;
  font-weight: 500;
  text-align: left;
  color: #f35437;
  display: flex;
}
.pricePoint {
  font-size: 26rpx;
  line-height: 56rpx;
  font-weight: 500;
}
/* 原价 */
.oldPrice {
  width: 82rpx;
  height: 34rpx;
  opacity: 0.18;
  font-size: 28rpx;
  font-family: DIN, DIN-Medium;
  font-weight: 500;
  text-decoration:  line-through;
  text-align: left;
  color: #323232;
  margin-left: 14rpx;
  line-height: 56rpx;
}
/* 操作结果 */
.result {
  /* width: 108rpx; */
  height: 40rpx;
  opacity: 1;
  border: 2rpx solid #1c6a4f;
  border-radius: 22rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #1c6a4f;
  line-height: 34rpx;
  line-height: 40rpx;
  text-align: center;
  padding:0 16rpx;
}
.ruseltTwo {
  min-width: 216rpx;
  height: 34rpx;
  opacity: 0.53;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #323232;
  line-height: 34rpx;
  margin-top: 14rpx;
}